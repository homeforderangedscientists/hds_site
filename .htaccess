# Block access to hidden files and directories (e.g., .git, .htaccess)
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to .git directory
RedirectMatch 404 /\.git
RedirectMatch 404 /.gitignore

# Block access to CLAUDE.md and other markdown files
<FilesMatch "\.md$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Block access to common config/dev files
<FilesMatch "(^#.*#|\.(bak|config|dist|fla|inc|ini|log|psd|sh|sql|sw[op])|~)$">
    Order allow,deny
    Deny from all
</FilesMatch>
