# Enable RewriteEngine
RewriteEngine On

# Block access to all hidden files and directories (starting with .)
RewriteRule (^|/)\.(?!well-known) - [F,L]

# Block access to CLAUDE.md and other markdown files
RewriteRule \.md$ - [F,L]

# Block access to common config/dev files
<FilesMatch "(^#.*#|\.(bak|config|dist|fla|inc|ini|log|psd|sh|sql|sw[op])|~)$">
    # Apache 2.4+
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    # Apache 2.2
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>
